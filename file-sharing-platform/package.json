{
  "name": "file-sharing-platform",
  "version": "1.0.0",
  "description": "A high-performance, secure file-sharing platform.",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/styles/output.css --minify",
    "watch:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/styles/output.css --watch",
    "dev:server": "nodemon src/app.js",
    "dev": "concurrently \"npm:dev:server\" \"npm:watch:css\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "file-sharing",
    "crypto",
    "premium"
  ],
  "author": "Jules",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "i18next": "^23.7.16",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-middleware": "^3.5.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "sequelize": "^6.35.2",
    "sqlite3": "^5.1.6",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.33",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2"
  }
}
